{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "strictNullChecks": false,
    "pretty": true,
    "rootDir": "src",
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true    
  },
  "exclude": ["node_modules", "node_modules/**", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"]
}
