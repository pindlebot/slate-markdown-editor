{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "strictNullChecks": false,
    "pretty": true,
    "rootDir": "src",
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "dist",
    "packages",
    "lib",
    "example"
  ]
}
