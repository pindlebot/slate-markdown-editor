{
  "name": "slate-markdown-editor",
  "version": "0.0.49",
  "description": "",
  "source": "src",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "postinstall": "parcel-babel-fix",
    "fix": "standard \"packages/**/*.js\" --fix --verbose | snazzy",
    "publish": "npm-patch packages/slate-markdown-editor",
    "build:main": "babel packages/slate-markdown-editor/src -d packages/slate-markdown-editor/lib",
    "build:heading": "babel packages/slate-markdown-heading/src -d packages/slate-markdown-heading/lib",
    "build:local": "babel packages/slate-local-storage/src -d packages/slate-local-storage/lib",
    "build:inline": "babel packages/slate-inline-markdown/src -d packages/slate-inline-markdown/lib",
    "build": "yarn run build:main && yarn run build:heading && yarn run build:local && yarn run build:inline"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "lib/",
      "example/"
    ]
  },
  "author": "Ben Gardner <ben@focuswish.com> (https://menubar.io)",
  "license": "ISC",
  "peerDependencies": {
    "immutable": "^3.8.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "slate": "^0.32.2"
  },
  "dependencies": {
    "parcel-babel-fix": "^0.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "eslint-plugin-flowtype": "^2.43.0",
    "execa": "^0.9.0",
    "flow-bin": "^0.64.0",
    "snazzy": "^7.0.0",
    "standard": "^11.0.0-beta.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unshift/slate-markdown-editor.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
